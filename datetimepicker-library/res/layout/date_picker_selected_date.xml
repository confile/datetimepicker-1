<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/date_picker_component_width" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@id/day_picker_selected_date_layout" android:background="@color/datepicker_primary" android:layout_width="@dimen/date_picker_component_width" android:layout_height="wrap_content" android:layout_weight="1.0"
      xmlns:android="http://schemas.android.com/apk/res/android" android:paddingBottom="8dp" android:paddingTop="8dp">
        <LinearLayout android:textColor="@color/date_picker_selector" android:layout_gravity="center" android:orientation="vertical" android:id="@id/date_picker_month_and_day" android:clickable="true" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/selected_date_month_size" android:textColor="@color/date_picker_selector" android:gravity="bottom|center" android:id="@id/date_picker_month" android:duplicateParentState="true" android:layout_width="fill_parent" android:layout_height="wrap_content" android:includeFontPadding="false" />
            <TextView android:textSize="@dimen/selected_date_day_size" android:textColor="@color/date_picker_selector" android:gravity="center" android:layout_gravity="center" android:id="@id/date_picker_day" android:duplicateParentState="true" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="-10dip" android:layout_marginBottom="-10dip" android:includeFontPadding="false" />
        </LinearLayout>
        <TextView android:textSize="@dimen/selected_date_year_size" android:textColor="@color/date_picker_selector" android:gravity="top|center" android:layout_gravity="center" android:id="@id/date_picker_year" android:layout_width="fill_parent" android:layout_height="wrap_content" android:includeFontPadding="false" />
    </LinearLayout>
    <ImageView
        android:id="@+id/date_picker_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:src="@drawable/ic_more_vert_white_24dp"
        android:background="@drawable/transparent_button_selector"
        android:layout_alignRight="@id/day_picker_selected_date_layout"
        android:layout_alignEnd="@id/day_picker_selected_date_layout"/>
</RelativeLayout>